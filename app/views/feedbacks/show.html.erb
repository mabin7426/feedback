<p><%= link_to "Back", "/feedbacks" %></p>

<div class="center hero-unit">
	<h1><%=@comment.fname %>, </h1>
	<h2>here are your comments</h2>

	<table class="table table-striped">
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th>Strengths</th>
				<th>Weaknesses</th>
				<th>Notes</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td><%= link_to "Delete", "/feedbacks/#{@comment.id}", method: 'delete', data: { confirm: "Are you sure you want to delete this comment?" } %></td>
				<td><%= link_to "Edit", "/feedbacks/#{@comment.id}/edit" %></td>
				<td><%= @comment.good %></td>
				<td><%= @comment.bad %></td>
				<td><%= @comment.notes %></td>
			</tr>
		</tbody>
	</table>
</div>
