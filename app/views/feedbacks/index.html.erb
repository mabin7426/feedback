<div class="center hero-unit">

	<h1>Welcome Brothers</h1>
	<h2>Click on your name to view your feedback</h2>

	<p><%= link_to "Create a New Comment", "/feedbacks/new" %></p>

	<table class="center table table-striped">
		<thead>
			<tr>
				<th></th>
				<th></th>
				<th>Name</th>
				<th>Strengths</th>
				<th>Weaknesses</th>
				<th>Notes</th>			
			</tr>
		</thead>
		<tbody>
		<% @comments.each do |comments| %>
			<tr>
				<td><%= link_to "Delete", "/feedbacks/#{comments.id}", method: 'delete', data: { confirm: "Are you sure you want to delete this comment?" } %></td>
				<td><%= link_to "Edit", "/feedbacks/#{comments.id}/edit" %></td>

				<td><%= link_to comments.fname, "/feedbacks/#{comments.id}"%></td>
				<td><%= link_to comments.good, "/feedbacks/#{comments.id}"%></td>
				<td><%= link_to comments.bad, "/feedbacks/#{comments.id}"%></td>
				<td><%= link_to comments.notes, "/feedbacks/#{comments.id}"%></td>
			</tr>
		<% end %>
		</tbody>
	</table>

</div>